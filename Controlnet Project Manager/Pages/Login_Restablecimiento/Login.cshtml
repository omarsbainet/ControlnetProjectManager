@page "/login"
@using Microsoft.AspNetCore.Authorization
@attribute [AllowAnonymous]
@model Controlnet_Project_Manager.Pages.LoginModel

@*@model Controlnet_Project_Manager.Areas.Identity.Pages.Account.LoginModel*@

<!DOCTYPE html>
<html lang="en">
<head>
	<title>Iniciar sesión</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
<!--===============================================================================================-->	
	<link rel="icon" type="image/png" href="~/images/icons/favicon.ico"/>
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/vendor/bootstrap/css/bootstrap.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/vendor/animate/animate.css">
<!--===============================================================================================-->	
	<link rel="stylesheet" type="text/css" href="~/vendor/css-hamburgers/hamburgers.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/vendor/animsition/css/animsition.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/vendor/select2/select2.min.css">
<!--===============================================================================================-->	
	<link rel="stylesheet" type="text/css" href="~/vendor/daterangepicker/daterangepicker.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/css/util.css">
	<link rel="stylesheet" type="text/css" href="~/css/main.css">
<!--===============================================================================================-->


	<style>
			.input-with-icon {
				position: relative;
			}

			.input-with-icon input {
				padding-right: 30px;
			}

			.input-with-icon .toggle-password {
				position: absolute;
				right: 10px;
				top: 50%;
				transform: translateY(-50%);
				cursor: pointer;
			}

	</style>
</head>
<body>
	
	<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100">
				<div class="login100-form-title" style="">
					<img src="images/bg-01.svg" alt="Controlnet"/>
				</div>

				<form method="post" asp-page="/login" class="login100-form validate-form">
					@Html.AntiForgeryToken()
					<div class="wrap-input100 validate-input m-b-26" data-validate="El email debe de tener formato ejemplo@ejemplo.es">
						<span class="label-input100">Email</span>
						<input asp-for="Input.Email" class="input100" type="text" name="email" autocomplete="email" placeholder="Introduzca el correo electrónico">
						<label asp-for="Input.Email" class="form-label"></label>
						<span asp-validation-for="Input.Email" class="text-danger"></span>
						<span class="focus-input100"></span>
					</div>

					<div class="wrap-input100 validate-input m-b-18" data-validate="La contraseña es obligatoria">
						<span class="label-input100">Contraseña</span>
						<div class="input-with-icon">
							<input asp-for="Input.Password" class="input100" type="password" name="password" autocomplete="current-password" placeholder="Introduzca la contraseña">
							<span class="toggle-password fa fa-eye-slash"></span>
						</div>
						<label asp-for="Input.Password" class="form-label"></label>
						<span asp-validation-for="Input.Password" class="text-danger"></span>
						<span class="focus-input100"></span>
					</div>

					<div class="flex-sb-m w-full p-b-30">
						<div>
							<!--Boton que nos redigirá a la pagina para introducir nuestro correo y contraseña-->
							<a href="/Email" class="txt-1">
								He olvidado mi contraseña
							</a>
						</div>
					</div>

					@if (!ModelState.IsValid)
					{
						<div class="text-danger m-b-18">
							<ul>
								@foreach (var valores in ModelState.Values)
								{
									foreach (var error in valores.Errors)
									{
										<li>@error.ErrorMessage</li>
									}
								}
							</ul>
						</div>
					}
					
					<div class="container-login100-form-btn">
						<button class="login100-form-btn">
							Iniciar sesión
						</button>
					</div>
				</form>
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			</div>
		</div>
	</div>
	
<!--===============================================================================================-->
	<script src="~/vendor/jquery/jquery-3.2.1.min.js"></script>
<!--===============================================================================================-->
	<script src="~/vendor/animsition/js/animsition.min.js"></script>
<!--===============================================================================================-->
	<script src="~/vendor/bootstrap/js/popper.js"></script>
	<script src="~/vendor/bootstrap/js/bootstrap.min.js"></script>
<!--===============================================================================================-->
	<script src="~/vendor/select2/select2.min.js"></script>
<!--===============================================================================================-->
	<script src="~/vendor/daterangepicker/moment.min.js"></script>
	<script src="~/vendor/daterangepicker/daterangepicker.js"></script>
<!--===============================================================================================-->
	<script src="~/vendor/countdowntime/countdowntime.js"></script>
<!--===============================================================================================-->
	<script src="~/js/main.js"></script>

	<script>
		$(document).ready(function () {
			$('.toggle-password').on('click', function () {
				var passwordInput = $(this).siblings('input[type="password"]');
				var icon = $(this);

				if (passwordInput.length > 0) {
					passwordInput.attr('type', 'text');
					icon.removeClass('fa-eye-slash').addClass('fa-eye');
				} else {
					passwordInput = $(this).siblings('input[type="text"]');
					passwordInput.attr('type', 'password');
					icon.removeClass('fa-eye').addClass('fa-eye-slash');
				}
			});
		});
	</script>

</body>
</html>
